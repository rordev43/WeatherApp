

<div class='w-full flex flex-col justify-center items-center'>
  <div class='w-[50%] flex flex-col'>
    <%= form_with(url: weather_path, method: :get, id: 'address-form', remote: true, class: 'w-full flex flex-col') do |form| %>
      <%= form.text_field :address, id: 'address-input', placeholder: 'Street , City, State, Zip', class: 'w-full' %>
      <%= form.submit :submit, value: 'Get Weather', class: 'ml-auto mt-3 rounded-full border-[1px] p-3', style: 'cursor:pointer;' %>
    <% end %>
  </div>

  <% if @weather.present? %>
    <div class='w-[50%] flex flex-col'>
      <div class='w-full flex justify-between'>
        <h1 class='text-3xl font-bold'><%= @weather["name"] %></h1>
      </div>
      <div class='flex items-center'>
        <img src="https://openweathermap.org/img/wn/<%= @weather["weather"][0]["icon"] %>@2x.png" />
        <h3 class='ml-5 text-xl font-bold'><%= @weather["main"]["temp"] %>°C</h3>
      </div>
      <div>
        <h4 class='text-5md font-bold'>Feels like <%= @weather["main"]["feels_like"] %>°C. <%= @weather["weather"][0]["description"] %>.</h4>
        <div class='bl-1 b'>
          <p>Humidity: <%= @weather["main"]["humidity"] %>%</p>
          <p>Pressure: <%= @weather["main"]["pressure"] %>hPa</p>
          <p>Visibility: <%= @weather["visibility"] %>m</p>
        </div>
      </div>
    </div>
  <% end %>
</div>
